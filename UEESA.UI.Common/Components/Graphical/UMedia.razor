@if (MediaSource is not null) 
{
    @if (MediaSource.EndsWith(".mp4"))
    {
        <video src="@MediaSource" />
    }
    else if (MediaSource.EndsWith(".avif"))
    {
        <img src="@MediaSource" />
    }
}

@code {

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string? MediaSource { get; set; }
}
