@inject ClientState ClientState
@inject UIState UIState

@inject JSInterface.AnimationManager AnimationManager

@code {

    protected override async Task OnInitializedAsync()
    {
        UIState.OnIsEconomeNavBarTickerVisibleChange += StateHasChanged;
        await base.OnInitializedAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (UIState.IsEconomeNavBarTickerVisible)
        {
            await Task.Delay(TimeSpan.FromSeconds(1.5));
            await AnimationManager.SlideInOutEonomeNavBarTicker(false);
        }
        await base.OnAfterRenderAsync(firstRender);
    }
}
